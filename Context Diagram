@startuml
title Контекстная диаграмма интернет-магазина

actor Покупатель as Buyer
actor Администратор as Admin

package "Интернет-магазин" {
  [Клиентское приложение покупателя] as BuyerApp
  [Клиентское приложение администратора] as AdminApp
  [Сервер приложения] as AppServer
  [Система хранения данных] as DataStorage
}

Buyer --> BuyerApp : Использует
Admin --> AdminApp : Использует

BuyerApp --> AppServer : Запросы/Ответы
AdminApp --> AppServer : Запросы/Ответы
AppServer --> DataStorage : Чтение/Запись данных

AppServer <- [Система проведения платежей] : Обработка платежей
AppServer <- [Клиентское приложение продавца] : Взаимодействие с продавцами
AppServer <- [Складская система] : Информация о наличии товаров
AppServer <- [Система логистики] : Данные о доставке
AppServer <- [Аналитическая система] : Продуктовая аналитика

@enduml
